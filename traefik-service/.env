# ==========================================
# .env.dev - Development Environment
# ==========================================

# JWT Configuration
JWT_SECRET=dev-secret-key-change-this-in-production-minimum-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_LIFETIME_MINUTES=60
REFRESH_TOKEN_LIFETIME_DAYS=7

# Redis Configuration
REDIS_HOST=redis_service
REDIS_PORT=6379

# User Service
USER_SERVICE_URL=http://web:8000

# Grafana (Development)
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Debug
DEBUG=true


# ==========================================
# .env.prod - Production Environment
# ==========================================
# 
# IMPORTANT: Never commit this file to git!
# Generate secure values for all secrets.
# ==========================================

# Domain Configuration
DOMAIN=yourdomain.com
ACME_EMAIL=admin@yourdomain.com

# JWT Configuration
# Generate with: openssl rand -hex 32
JWT_SECRET=your-super-secure-secret-key-minimum-32-characters-long-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_LIFETIME_MINUTES=15
REFRESH_TOKEN_LIFETIME_DAYS=7

# Redis Configuration
REDIS_HOST=redis_service
REDIS_PORT=6379

# User Service
USER_SERVICE_URL=http://web:8000

# Traefik Dashboard BasicAuth
# Generate with: htpasswd -nb admin yourpassword
DASHBOARD_AUTH=admin:$$apr1$$abc123$$xyz789

# Grafana Configuration
# Generate strong password: openssl rand -base64 32
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your-strong-grafana-password-at-least-16-characters

# Debug (MUST be false in production)
DEBUG=false


# ==========================================
# Password Generation Commands
# ==========================================
#
# Generate JWT Secret:
# python3 -c "import secrets; print(secrets.token_urlsafe(32))"
#
# Generate Strong Password:
# openssl rand -base64 32
#
# Generate BasicAuth (requires apache2-utils):
# htpasswd -nb admin yourpassword
#
# Verify .env.prod is not tracked:
# git check-ignore -v .env.prod
#
# ==========================================